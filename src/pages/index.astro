---
import Badge from '../components/Badge.astro';
import Layout from '../layouts/Layout.astro';
import GitHub from '../components/icons/GitHub.astro'
import EnlaceSocial from '../components/icons/EnlacesSocial.astro'
import LinkedIn from '../components/icons/LinkedIn.astro'
import Mail from '../components/icons/Mail.astro'
import Section from '../components/Section.astro';
import Experiencia from '../components/Experiencia.astro'
import Proyectos from '../components/Proyectos'
import SobreMi from '../components/SobreMi.astro'
import EnlacesSocial from '../components/icons/EnlacesSocial.astro';
import Contacto from '../components/Contacto.astro';

export const prerender = true
---

<Layout title="Desarrollador y Programador Web FullStack" description='+2 años de experiencia en el Desarrollo Web y Desktop.'>
	<main class="px-4">
		<Section class="md:py-44 pb-24 py-22" id="top">

			<div class="flex gap-4 mb-4">
				<img 
					class='shadow-lg size-16 mask mask-squircle' 
					src="perfil.jpg" 
					alt="Imagen de PG" 
				/>
				<Badge />
			</div>
			<h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
				Hey, soy Pablo Gillespie
			</h1>

			<h2 class="text-xl lg:text-2xl text-wrap max-w-[750px] mt-6 dark:[&>span]:text-yellow-200 [&>strong]:text-sky-500 [&>span]:font-semibold dark:text-gray-300">
				+2 años de experiencia como
				<span>Desarrollador Web y Desktop. De Uruguay.</span> 
				Especializado en la creación de aplicaciones únicas
			</h2>

			<nav class="flex gap-2 justify-center md:gap-x-2 mt-5 md:flex-row flex-wrap sm:justify-normal">
				<EnlacesSocial href="https://github.com/pgcodedeveloper">
					<GitHub class="size-6"/>
					GitHub
				</EnlaceSocial>
			</nav>
		</Section>

		<Section class="py-10" id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex items-center gap-x-3">
				<svg xmlns="http://www.w3.org/2000/svg" class="size-7" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" />
					<path d="M8 7v-2a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v2" />
					<path d="M12 12l0 .01" />
					<path d="M3 13a20 20 0 0 0 18 0" />
				</svg>
				Experiencia
			</h2>
			<Experiencia />
		</Section>

		<Section class="py-10" id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex items-center gap-x-3">
				<svg xmlns="http://www.w3.org/2000/svg" class="size-7" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/>
					<path d="M8.5 13.5l-1.5 -1.5l1.5 -1.5" />
					<path d="M15.5 10.5l1.5 1.5l-1.5 1.5" />
					<path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
					<path d="M13 9.5l-2 5.5" />
				</svg>
				Proyectos
			</h2>
			<Proyectos client:load/>
		</Section>

		<Section class="py-10" id="sobre-mi">
			<h2 class="text-3xl font-semibold mb-6 flex items-center gap-x-3">
				<svg class="size-8" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
					<path stroke="none" d="M0 0h24v24H0z" fill="none" />
					<path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
					<path d="M6 21v-2a4 4 0 0 1 4 -4h4" />
					<path d="M15 19l2 2l4 -4" />
				</svg>
				Sobre mí
			</h2>
			<SobreMi />
			
		</Section>

		<Section class="py-10" id="contacto">
			<h2 class="text-3xl font-semibold mb-6 flex items-center gap-x-3">
				<svg xmlns="http://www.w3.org/2000/svg" class="size-8" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M20 6v12a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2z" />
					<path d="M10 16h6" />
					<path d="M13 11m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
					<path d="M4 8h3" />
					<path d="M4 12h3" />
					<path d="M4 16h3" />
				</svg>
				Contáctame
			</h2>

			<Contacto />
		</Section>
		
	</main>
</Layout>