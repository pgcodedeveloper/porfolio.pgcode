---
import Section from "../../components/Section.astro"
import Layout from "../../layouts/Layout.astro"
import {formatearFecha, Proyectos} from '../../helpers/index'

export const prerender = true

export async function getStaticPaths() {
    
    
    const proyectos = Proyectos;
    return proyectos.map(proy =>({
        params: {
            id: proy.url
        },
        props: {
            proyecto: proy
        }
    }))
}

const {proyecto} = Astro.props;
const {titulo, descripcion, imagen, repo, demo, fecha, tecnologias, descripcionLarga} = proyecto;

---

<Layout title="Desarrollador y Programador Web FullStack" description="+2 años de experiencia en el Desarrollo Web y Desktop.">
    <main class="px-4">
        <Section class="py-20">
            <a href={`/`} class="btn btn-sm text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                <svg class="-rotate-180  w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
                Volver
            </a>
            <h2 id="experiencia" class="sm:text-3xl text-2xl mt-5 font-semibold mb-6 flex items-center gap-x-3 justify-center text-balance">
				<svg xmlns="http://www.w3.org/2000/svg" class="size-7" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M3 4a1 1 0 0 1 1 -1h16a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-16a1 1 0 0 1 -1 -1v-12z" />
                    <path d="M3 13h18" />
                    <path d="M8 21h8" />
                    <path d="M10 17l-.5 4" />
                    <path d="M14 17l.5 4" />
                </svg>
				Proyecto: <span class="text-primary">{titulo}</span>
			</h2>
            <time class="text-right text-sm block">Última actualización: {formatearFecha(fecha)}</time>

            <article class="mt-5">
                
                <img class="img mr-2" src={imagen} alt=`Imagen proyecto ${titulo}`>
                <p class="text">{descripcionLarga}</p>

                <div class='mt-5 flex items-center flex-wrap gap-2'>
                    {tecnologias.map(tec => (
                        <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">{tec.nombre}</span>
                    ))}
                </div>
                
                <div class="flex items-center mt-5 gap-x-4">
                    {repo && (
                        <a class="btn btn-outline" href={repo}>
                            <svg class='size-5' viewBox="0 0 256 250" width="256" height="250" fill="currentColor" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid">
                                <path d="M128.001 0C57.317 0 0 57.307 0 128.001c0 56.554 36.676 104.535 87.535 121.46 6.397 1.185 8.746-2.777 8.746-6.158 0-3.052-.12-13.135-.174-23.83-35.61 7.742-43.124-15.103-43.124-15.103-5.823-14.795-14.213-18.73-14.213-18.73-11.613-7.944.876-7.78.876-7.78 12.853.902 19.621 13.19 19.621 13.19 11.417 19.568 29.945 13.911 37.249 10.64 1.149-8.272 4.466-13.92 8.127-17.116-28.431-3.236-58.318-14.212-58.318-63.258 0-13.975 5-25.394 13.188-34.358-1.329-3.224-5.71-16.242 1.24-33.874 0 0 10.749-3.44 35.21 13.121 10.21-2.836 21.16-4.258 32.038-4.307 10.878.049 21.837 1.47 32.066 4.307 24.431-16.56 35.165-13.12 35.165-13.12 6.967 17.63 2.584 30.65 1.255 33.873 8.207 8.964 13.173 20.383 13.173 34.358 0 49.163-29.944 59.988-58.447 63.157 4.591 3.972 8.682 11.762 8.682 23.704 0 17.126-.148 30.91-.148 35.126 0 3.407 2.304 7.398 8.792 6.14C219.37 232.5 256 184.537 256 128.002 256 57.307 198.691 0 128.001 0Zm-80.06 182.34c-.282.636-1.283.827-2.194.39-.929-.417-1.45-1.284-1.15-1.922.276-.655 1.279-.838 2.205-.399.93.418 1.46 1.293 1.139 1.931Zm6.296 5.618c-.61.566-1.804.303-2.614-.591-.837-.892-.994-2.086-.375-2.66.63-.566 1.787-.301 2.626.591.838.903 1 2.088.363 2.66Zm4.32 7.188c-.785.545-2.067.034-2.86-1.104-.784-1.138-.784-2.503.017-3.05.795-.547 2.058-.055 2.861 1.075.782 1.157.782 2.522-.019 3.08Zm7.304 8.325c-.701.774-2.196.566-3.29-.49-1.119-1.032-1.43-2.496-.726-3.27.71-.776 2.213-.558 3.315.49 1.11 1.03 1.45 2.505.701 3.27Zm9.442 2.81c-.31 1.003-1.75 1.459-3.199 1.033-1.448-.439-2.395-1.613-2.103-2.626.301-1.01 1.747-1.484 3.207-1.028 1.446.436 2.396 1.602 2.095 2.622Zm10.744 1.193c.036 1.055-1.193 1.93-2.715 1.95-1.53.034-2.769-.82-2.786-1.86 0-1.065 1.202-1.932 2.733-1.958 1.522-.03 2.768.818 2.768 1.868Zm10.555-.405c.182 1.03-.875 2.088-2.387 2.37-1.485.271-2.861-.365-3.05-1.386-.184-1.056.893-2.114 2.376-2.387 1.514-.263 2.868.356 3.061 1.403Z" fill="currentColor"/>
                            </svg>
                        </a>
                    )}
                    
                    {demo && (
                        <a class="btn btn-outline" href={demo}>
                            <svg class='size-5' xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                            </svg>
                        </a>
                    )}
                    
                </div>
            </article>
        </Section>    
    </main>
    <style>
        .img{
            float: left;
            margin-bottom: 0.5rem;
        }
        .text{
            text-wrap: balance;
            text-align: left;
            white-space: pre-wrap;
        }
        @media(max-width: 468px){
            .img{
                float: none;
                margin: 0 auto;
            }
            .text{
                margin-top: 2rem;
            }
        }
    </style>
</Layout>

